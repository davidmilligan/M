
<Card Class="Class">
    <CardHeader Class="Class" Style="cursor: pointer;" @onclick="() => IsExpanded = !IsExpanded">
        <CardTitle>
            <Icon Name="@(IsExpanded ? Blazorise.Icons.FontAwesome.FontAwesomeIcons.ChevronCircleDown : Blazorise.Icons.FontAwesome.FontAwesomeIcons.ChevronCircleRight)"/> @Header
        </CardTitle>
    </CardHeader>
    @if (IsExpanded)
    {
        <CardText Class="@ContentClass">
            @Content
        </CardText>
    }
</Card>

@code {
    [Parameter] public RenderFragment Header { get; set; }
    [Parameter] public RenderFragment Content { get; set; }
    [Parameter] public bool IsExpanded { get; set; }
    [Parameter] public string ContentClass { get; set; }
    [Parameter] public string HeaderClass { get; set; }
    [Parameter] public string Class { get; set; }
}
