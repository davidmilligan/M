<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (!context.User.Identity.IsAuthenticated)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        <p>Please Login</p>
                    }
                </NotAuthorized>
                <Authorizing>
                    <div class="position-fixed d-flex align-items-center justify-content-center vh-100 vw-100">
                        <div class="alert alert-primary shadow d-inline-flex">
                            <span class="spinner-border" aria-hidden="true"></span><h4 class="mb-0">&nbsp;Logging In...</h4>
                        </div>
                    </div>
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
